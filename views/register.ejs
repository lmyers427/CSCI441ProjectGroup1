<!-- This page is the default page for user registration --> 

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Group 1</title>
    <link rel="stylesheet" type="text/css" href="/css/register.css" />
   
</head>
<body>

    <div class = "bookshelf"></div>

    <h1>Burns and Mobile</h1>
    <h3><%= message %> <br> Create an Account</h3>

    <form action="/register" method="POST">
        <div class="username">
            <label for="uname"><b>Username</b></label>
        </div>
            <input type="text" id="username" placeholder="Enter Username" name="username" required>
        
        <div class="password">
        <label for="psw"><b>Password</b></label>
        </div>
        <input type="password" id="password" placeholder="Enter Password" name="password" required>

        <div class="email">
        <label for="email"><b>Email</b></label>   
        </div>
        <input type="email" id="email" placeholder="Enter Email (optional)" name="email">

        <div class="fname">
        <label for="fname"><b>First Name</b></label>   
        </div>
        <input type="fname" id="fname" placeholder="Enter First Name (optional)" name="fname">
    
        <div class="lname">
        <label for="lname"><b>Last Name</b></label>   
        </div>
        <input type="lname" id="lname" placeholder="Enter Last Name (optional)" name="lname">
        

        <label class="remember">
        <input type="checkbox" checked="checked" name="remember"> Remember me
        </label>

        <button type="button" class="cancelbtn">Submit</button>

        
        <span class="psw"><a href="login">Login</a></span>


    </form>
    
</body>

<footer>
    <a href="support.html">Support</a>
</footer>
</html>