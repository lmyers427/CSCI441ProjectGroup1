<!-- This page is the default page for user login --> 

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>Group 1</title>
    <link rel="stylesheet" type="text/css" href="/css/login.css" />
</head>
<body>

    <div class = "bookshelf"></div>

    <h1>Burns and Mobile</h1>
    <h3><%=message%></h3>


    <form action="/login" method="POST" id="auth_form">
        <div class="username">
            <label for="uname"><b>Username</b></label>
        </div>
            <input type="text" id="username" placeholder="Enter Username" name="username" required>
        
        <div class="password">
        <label for="psw"><b>Password</b></label>
        </div>
        <input type="password" id="password"  placeholder="Enter Password" name="password" required>

        <label class="remember">
        <input type="checkbox" checked="checked" name="remember"> Remember me
        </label>

        <button type="submit" class="cancelbtn">Submit</button>
        

    </form>

    <span class="psw"><a href="#">Forgot password?</a></span>
    <span class="register"><a href="register">Sign Up</a></span>

</body>

<footer>
    <a href="support.html">Support</a>
</footer>
</html>